<header class = "navbar navbar-fixed-top navbar-inverse">
	<div class = "navbar-inner">
		<div class = "container">
			<%= link_to "UAC Helpdesk", root_path, id: "logo" %>
			<nav>
				<ul class = "nav pull-right">
					<li><%= link_to "Home", root_path %></li>
					<li><%= link_to "Ayuda", help_path %></li>
					<% if signed_in? %>
					
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<i class="icon-tasks icon-white"></i> Tickets<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Mis Tickets", tickets_path %></li>
							<li><%= link_to "Crear Ticket", new_ticket_path %></li>
							<li class="divider"></li>
							<li><%= link_to "Encuestas", surveys_path %></li>
						</ul>
					</li>
					<li id="fat-menu" class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							<i class="icon-user icon-white"></i> <%= current_user.name %><b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "Mi Perfil", current_user %></li>
							<li><%= link_to "Configuración", edit_user_path(current_user) %></li>
							<li><%= link_to "Administrar usuarios", users_path %></li>
							<li><%= link_to "Administrar categorias", categories_path %></li>
							<li class="divider"></li>
							<li>
								<%= link_to "Salir", signout_path, method: "delete" %>
							</li>
						</ul>
					</li>
					<% else %>
					<li><%= link_to "Iniciar Sesión", signin_path %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>