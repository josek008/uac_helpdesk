<% unless current_user?(user) %>
<tr>
	<td><%= gravatar_tag user.email, size: 52 %> <%= link_to user.name, user %></td>
	<td><%= user.department.name %></td>
	<td><%= user.role %></td>
	<% if current_user.admin? %>
	<td>
		<div class="btn-group">
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<i class="icon-cog"></i>
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><%= link_to 'Eliminar <i class="icon-remove"></i>'.html_safe, user, method: :delete, data: { confirm: "¿Está seguro?" } %></li>
				<li><%= link_to 'Asignar Rol <i class="icon-thumbs-up"></i>'.html_safe, assign_role_url(id: user.id) %></li>
			</ul>
		</div>
	</td>
	<% end %>
</tr>
<% end %>