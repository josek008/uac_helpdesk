<% provide(:title, 'Registro') %>
<h1>Nuevo Usuario</h1>

<div class="row">
	<div class="span6 offset3">

		<%= form_for(@user, class: "form-horizontal") do |f| %>
		<%= render 'shared/error_messages', object: f.object %>

		<div class="control-group">
			<%= f.label :name, class: "control-label" %>
			<%= f.text_field :name %>
		</div>

		<div class="control-group">
			<%= f.label :email, class: "control-label" %>
			<%= f.text_field :email %>
		</div>

		<div class="control-group">
			<%= f.label :department_id, "Selecciona tu departamento", class: "control-label" %>
			<%= f.collection_select :department_id, @departments, :id, :name %>
		</div>

		<div class="control-group">
			<%= f.label :password, class: "control-label" %>
			<%= f.password_field :password %>
		</div>

		<div class="control-group">
			<%= f.label :password_confirmation, "Confirma tu contraseña", class: "control-label"  %>
			<%= f.password_field :password_confirmation %>
		</div>

		<%= f.submit "Regístrame!", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>