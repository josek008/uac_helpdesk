<% provide(:title, 'Editar usuario') %>
<h1>Editar perfil</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user, class: "form-horizontal") do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= render 'fields', :f => f %>
		<div class="actions">
			<%= f.submit "Guardar cambios", class: "btn btn-large btn-primary" %>
		</div>
		<% end %>
		<%= gravatar_tag @user.email, size: 40 %>
		<a href="http://gravatar.com/emails">change</a>
	</div>
</div>