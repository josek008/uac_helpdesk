<% provide(:title, 'Ticket en espera') %>
<h1>Cambiando de estado a ticket: <%= @ticket.id %></h1>
<div class="row">
	<div class="span8 offset3">
		<%= form_for(@log = Log.new, class: "form-horizontal", url: hold_ticket_url, method: :put) do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
			<div class="control-group">
				<%= f.text_area :content, placeholder: "Ingrese sus comentarios...", required: true %>
				<%= f.hidden_field :ticket_id, value: @ticket.id %>
			</div>
		<%= f.submit "Poner en espera", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>