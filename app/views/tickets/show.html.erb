<% provide(:title, "Ticket ##{@ticket.id}") %>
<section>
	<legend>Detalle</legend>
	<%= render 'shared/ticket_detail' %>
</section>

<% unless @ticket.marked_as_closed? || @ticket.closed? %>
<section>
	<legend>Nuevo Seguimiento</legend>
	<%= render 'shared/log_form' %>
</section>
<% end %>

<section>
	<legend>Historial</legend>
	<div class="container">
		<%= render 'shared/logs' %>
	</div>
</section>


